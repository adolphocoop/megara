<div class="col-md-4 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Editar cliente</h3>
        </div>
        <div class="card-body">
            <form action="/clientes/editar-cliente/{{_id}}?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="nombre"
                class="form-control"
                placeholder="Nombre"
                autofocus=""
                value="{{nombre}}">
            </div>
            <div class="form-group">
                <input type="text" name="apellidos"
                class="form-control"
                placeholder="Apellidos"
                autofocus=""
                value="{{apellidos}}">
            </div>
            <div class="form-group">
                <input type="text" name="email"
                class="form-control"
                placeholder="Email"
                autofocus=""
                value="{{email}}">
            </div>
            <div class="form-group">
                <input type="text" name="telefono"
                class="form-control"
                placeholder="Telefono"
                autofocus=""
                value="{{telefono}}">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block"
                type="submit">Guardar</button>
            </div>
            
            </form>

        </div>
    </div>
</div>