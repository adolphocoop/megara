<div class="col-md-4 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/productos/editar-producto/{{_id}}?_method=PUT" method="POST" >
            <div class="form-group">
                <input type="text" name="proveedor"
                class="form-control"
                placeholder="Proveedor"
                autofocus=""
                value="{{proveedor}}"> 
            </div>
            
            <div class="form-group">
                <input type="text" name="nombre"
                class="form-control"
                placeholder="Nombre"
                autofocus=""
                value="{{nombre}}">
            </div>
            <div class="form-group">
                <input type="text" name="descripcion"
                class="form-control"
                placeholder="Descripcion"
                autofocus=""
                value="{{descripcion}}">
            </div>
            <div class="form-group">
                <input type="text" name="tipo"
                class="form-control"
                placeholder="Tipo"
                autofocus=""
                value="{{tipo}}">
            </div>
            <div class="form-group">
                <input type="text" name="precio"
                class="form-control"
                placeholder="Precio"
                autofocus=""
                value="{{precio}}">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block"
                type="submit">Guardar</button>
            </div>
            
            </form>

        </div>
    </div>
</div>